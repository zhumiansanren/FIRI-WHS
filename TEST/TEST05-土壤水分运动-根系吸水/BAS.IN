!==================================================================================================
! 模拟根系吸水过程
!
! 模拟时长: 30 d
! 土体深度: 200 cm
! 土壤质地: 砂壤土
! 初始条件: 含水率 0.2 cm^3 cm^-3
! 底部边界条件: 自由排水条件
! 地表边界条件: 大气条件
!==================================================================================================


!--------------------------------------------------------------------------------------------------
! 基本设置
!--------------------------------------------------------------------------------------------------
  PRJNAM = 'This is a demo of root water uptake.' ! 模拟项目简要描述, 限 100 个英文字符

  IRUNMOD = 1                                    ! IRUNMOD = 1, 正常模式, 出错时退出程序
                                                 !         = 2, 安静模式, 出错时退出程序
                                                 !         = 3, 安静模式, 出错时继续运行

  LRWU = .TRUE.                                  ! 控制是否模拟根系吸水
                                                 ! LRWU = .TRUE., 是
                                                 !      = .FALSE., 否

  NMAT = 2                                       ! 土壤材料数量

  NCEL = 100                                     ! 土壤单元体数量

  NPER = 30                                      ! 应力期数量

!--------------------------------------------------------------------------------------------------
! 输入文件
!--------------------------------------------------------------------------------------------------
  S_IN_SOL = 'SOIL.IN'                           ! 土壤数据输入文件

  S_IN_PER = 'PERIOD.IN'                         ! 应力期数据输入文件

!--------------------------------------------------------------------------------------------------
! 输出文件
!--------------------------------------------------------------------------------------------------
  S_OUT_LST  = 'LIST.OUT'                        ! 土壤剖面数据输出文件

  S_OUT_PER  = 'PERIOD.OUT'                      ! 应力期数据输出文件

  S_OUT_OBS  = 'OBS.OUT'                         ! 观测点数据输出文件

!--------------------------------------------------------------------------------------------------
! 土壤水流运动
!--------------------------------------------------------------------------------------------------
  ISWFINI = 1                                    ! 土壤水流运动初始条件类型
                                                 ! ISWFINI = 0, 初始条件为土壤水势
                                                 !         = 1, 初始条件为土壤含水率

  ISWFBOT = 4                                    ! 底部水分运动边界条件类型
                                                 ! ISWFBOT = 1, Dirichlet 条件, 需要输入底部边界的水势或含水率
                                                 !         = 2, Neumann 条件, 需要输入底部边界的水量
                                                 !         = 3, Cauchy 条件, 需要输入底部边界的水势和延迟时间
                                                 !         = 4, 自由排水条件, 不需要输入其他数据
                                                 !         = 5, 渗出面条件, 不需要输入其他数据

  ISWFTOP = 4                                    ! 地表水分运动边界条件类型
                                                 ! ISWFTOP = 1, Dirichlet 条件, 需要输入地表边界的水势或含水率
                                                 !         = 2, Neumann 条件, 需要输入地表边界的水量
                                                 !         = 3, Cauchy 条件, 需要输入地表边界的水势和延迟时间
                                                 !         = 4, 大气条件, 需要输入气象数据


!--------------------------------------------------------------------------------------------------
! 根系吸水
!--------------------------------------------------------------------------------------------------

  IRWUDIST   = 1                                     ! 根系吸水分布的计算方法
                                                     ! IRWUDIST = 0, 直接输入
                                                     !          = 1, 采用指数函数计算

  PRWUDIST   = 3.5                                   ! 根系吸水分布函数的参数

  RWUCOMPCRT = 1.0                                   ! 根系吸水补偿系数的临界值

  PRWUHCRT    = 0.0, -1.0, -500.0, -900.0, -16000.0  ! Feddes 模型根系吸水水分胁迫响应函数的临界水势 (cm)
                                                     ! H1, H2, H3H, H3L, H4
  PRWUTCRT    = 0.5, 0.1                             ! Feddes 模型根系吸水水分胁迫响应函数的临界蒸腾速率 (cm d^-1)
                                                     ! T3H, T3L

!--------------------------------------------------------------------------------------------------
! 方程组迭代求解参数
!--------------------------------------------------------------------------------------------------
  MAXITR = 30                                    ! 最大迭代次数

  HTOL   = 1.0                                   ! 水势容差 (cm)

  OTOL   = 0.001                                 ! 含水率容差 (cm^3 cm^-3)
