!==================================================================================================
! 模拟麦田水文过程
!
! 模拟时长: 90 d
! 土体深度: 200 cm
! 土壤质地: 砂壤土
! 初始条件: 水势 -100 cm
! 底部边界条件: 自由排水条件
! 地表边界条件: 大气条件
!==================================================================================================

!--------------------------------------------------------------------------------------------------
! 基本设置
!--------------------------------------------------------------------------------------------------
  PRJNAM = 'This is a demo of water, heat and salt movement for wheat field.' ! 模拟项目简要描述, 限 100 个英文字符

  IRUNMOD = 1                                    ! IRUNMOD = 1, 正常模式, 出错时退出程序
                                                 !         = 2, 安静模式, 出错时退出程序
                                                 !         = 3, 安静模式, 出错时继续运行

  LMETEO  = .TRUE.                               ! 是否输入气象数据
                                                 ! LMETEO = .TRUE., 是
                                                 !        = .FALSE., 否

  LCROP   = .TRUE.                               ! 是否输入作物数据
                                                 ! LCROP = .TRUE., 是
                                                 !       = .FALSE., 否

  NMAT    = 2                                    ! 土壤材料数量

  NCEL    = 200                                  ! 土壤单元体数量

  NPER    = 90                                   ! 应力期数量

!--------------------------------------------------------------------------------------------------
! 输入文件
!--------------------------------------------------------------------------------------------------
  S_IN_SOL  = 'SOIL.IN'                          ! 土壤材料数据入文件

  S_IN_PER  = 'PERIOD.IN'                        ! 应力期数据输入文件

  S_IN_MET  = 'METEO.IN'                         ! 气象数据输入文件

  S_IN_CRP  = 'CROP.IN'                          ! 作物数据输入文件

!--------------------------------------------------------------------------------------------------
! 输出文件
!--------------------------------------------------------------------------------------------------
  S_OUT_LST  = 'LIST.OUT'                        ! 土壤剖面数据输出文件

  S_OUT_PER  = 'PERIOD.OUT'                      ! 应力期数据输出文件

  S_OUT_OBS  = 'OBS.OUT'                         ! 观测点数据输出文件

!--------------------------------------------------------------------------------------------------
! 大气
!--------------------------------------------------------------------------------------------------

  LATITUDE  = 35.0                               ! 纬度 (°)

  ALTITUDE  = 100.0                              ! 海拔 (m)

  WINDHGT   = 10.0                               ! 风速测量高度 (m)

  PANGSTROM = 0.25, 0.5                          ! Angstrom-Prescott 公式系数

  IRAD      = 1                                  ! 太阳辐射量计算方法
                                                 ! IRAD = 0, 由用户直接输入
                                                 !      = 1, 由日照时数计算

!--------------------------------------------------------------------------------------------------
! 作物
!--------------------------------------------------------------------------------------------------

  IPET        = 2                                ! 潜在蒸发蒸腾量的计算方法
                                                 ! IPET = 0, 直接输入 WEPOT 和 WTPOT
                                                 !      = 1, 输入 WETPOT, LAI 或 SCF 计算 WEPOT 和 WTPOT
                                                 !      = 2, 采用 FAO Penman-Monteth 公式和作物系数计算 WETPOT, 再根据 LAI 或 SCF 计算 WEPOT 和 WTPOT
                                                 !      = 3, 采用 FAO Hargreaves 公式和作物系数计算 WETPOT, 再根据 LAI 或 SCF 计算 WEPOT 和 WTPOT

  ISCF        = 1                                ! 地表覆盖度计算方法
                                                 ! ISCF = 0, 由用户输入
                                                 !      = 1, 输入 LAI 计算

  EXTINC      = 0.39                             ! 冠层消光系数

  ALBEDO      = 0.23                             ! 冠层反射率

  PINTERC     = 0.025                            ! 冠层截留公式系数 (cm d^-1)

  PRWUDIST    = 3.5                              ! 根系吸水分布函数的参数

  RWUCOMPCRT  = 1.0                              ! 根系吸水补偿系数的临界值

  PRWUHCRT    = 0.0, -1.0, -500.0, -900.0, -16000.0  ! Feddes 模型根系吸水水分胁迫响应函数的临界水势 (cm)
                                                     ! H1, H2, H3H, H3L, H4
  PRWUTCRT    = 0.5, 0.1                             ! Feddes 模型根系吸水水分胁迫响应函数的临界蒸腾速率 (cm d^-1)
                                                     ! T3H, T3L

!--------------------------------------------------------------------------------------------------
! 土壤水流运动
!--------------------------------------------------------------------------------------------------
  ISWFINI  = 0                                   ! 土壤水流运动初始条件的类型
                                                 ! ISWFINI = 0, 初始条件为土壤水势
                                                 !         = 1, 初始条件为土壤含水率

  ISWFBOT = 4                                    ! 底部水分运动边界条件类型
                                                 ! ISWFBOT = 1, Dirichlet 条件, 需要输入底部边界的水势或含水率
                                                 !         = 2, Neumann 条件, 需要输入底部边界的水量
                                                 !         = 3, Cauchy 条件, 需要输入底部边界的水势和延迟时间
                                                 !         = 4, 自由排水条件, 不需要输入其他数据
                                                 !         = 5, 渗出面条件, 不需要输入其他数据

  ISWFTOP = 4                                    ! 地表水分运动边界条件类型
                                                 ! ISWFTOP = 1, Dirichlet 条件, 需要输入地表边界的水势或含水率
                                                 !         = 2, Neumann 条件, 需要输入地表边界的水量
                                                 !         = 3, Cauchy 条件, 需要输入地表边界的水势和延迟时间
                                                 !         = 4, 大气条件, 需要输入气象数据

  HATM     = -10000.0                            ! 地表风干的水势 (cm)

  HPONDMAX = 5.0                                 ! 地表最大积水深度 (cm)

!--------------------------------------------------------------------------------------------------
! 方程组迭代求解参数
!--------------------------------------------------------------------------------------------------
  MAXITR = 30                                    ! 最大迭代次数

  HTOL   = 1.0                                   ! 水势容差 (cm)

  OTOL   = 0.0001                                ! 含水率容差 (cm^3 cm^-3)
