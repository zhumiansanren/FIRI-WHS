!==================================================================================================
! 模拟毛管水上升
!
! 模拟时长: 100 d
! 土壤深度: 200 cm
! 土壤质地: 砂壤土
! 初始条件: 水势 -500 cm
! 底部边界: 水势 0 cm
! 地表边界: 水量 0 cm
!==================================================================================================

!--------------------------------------------------------------------------------------------------
! 常规设置
!--------------------------------------------------------------------------------------------------
  PRJNAM = 'This is a demo for caplliary rise with a water table.'  ! 项目名称, 限 100 个英文字符

  IRUNMOD = 1                                    ! IRUNMOD = 1, 正常模式, 出错时退出程序
                                                 !         = 2, 安静模式, 出错时退出程序
                                                 !         = 3, 安静模式, 出错时继续运行

  NMAT = 1                                       ! 土壤材料数量

  NCEL = 100                                     ! 土壤单元体数量

  NPER = 100                                     ! 应力期数量

!--------------------------------------------------------------------------------------------------
! 输入文件
!--------------------------------------------------------------------------------------------------
  S_IN_SOL = 'SOIL.IN'                           ! 土壤数据输入文件

  S_IN_PER = 'PERIOD.IN'                         ! 应力期数据输入文件

!--------------------------------------------------------------------------------------------------
! 输出文件
!--------------------------------------------------------------------------------------------------
  S_OUT_LST  = 'LIST.OUT'                        ! 土壤剖面数据输出文件

  S_OUT_PER  = 'PERIOD.OUT'                      ! 应力期数据输出文件

  S_OUT_OBS  = 'OBS.OUT'                         ! 观测点数据输出文件

!--------------------------------------------------------------------------------------------------
! 土壤水分运动设置
!--------------------------------------------------------------------------------------------------
  ISWFINI = 0                                    ! 土壤水流运动初始条件类型
                                                 ! ISWFINI = 0, 初始条件为土壤水势
                                                 !         = 1, 初始条件为土壤含水率

  ISWFBOT = 1                                    ! 底部水分运动边界条件类型
                                                 ! ISWFBOT = 1, Dirichlet 条件, 需要输入底部边界的水势或含水率
                                                 !         = 2, Neumann 条件, 需要输入底部边界的水量
                                                 !         = 3, Cauchy 条件, 需要输入底部边界的水势和延迟时间
                                                 !         = 4, 自由排水条件, 不需要输入其他数据
                                                 !         = 5, 渗出面条件, 不需要输入其他数据

  ISWFTOP = 2                                    ! 地表水分运动边界条件类型
                                                 ! ISWFTOP = 1, Dirichlet 条件, 需要输入地表边界的水势或含水率
                                                 !         = 2, Neumann 条件, 需要输入地表边界的水量
                                                 !         = 3, Cauchy 条件, 需要输入地表边界的水势和延迟时间
                                                 !         = 4, 大气条件, 需要输入气象数据

!--------------------------------------------------------------------------------------------------
! 方程组迭代求解参数
!--------------------------------------------------------------------------------------------------
  MXITR = 30                                     ! 最大迭代次数

  HTOL  = 1.0                                    ! 水势容差 (cm)

  OTOL  = 0.0001                                 ! 含水率容差 (cm^3 cm^-3)

