!==================================================================================================
! 模拟地表积水入渗
!
! 模拟时长: 300 min
! 土壤深度: 100 cm
! 土壤质地: 砂壤土
! 初始条件: 水势 -500 cm
! 底部边界条件: 不透水
!              地温 零梯度
! 地表边界条件: 水势 2.5 cm
!              地温 30 °C
!==================================================================================================

!--------------------------------------------------------------------------------------------------
! 常规设置
!--------------------------------------------------------------------------------------------------
  PRJNAM = 'This is a demo for surface infiltration with ponding.'  ! 项目名称, 限 100 个英文字符

  LHEAT = .TRUE.                                 ! 控制是否模拟土壤热传导
                                                 ! LHEAT = .TRUE., 是
                                                 !       = .FALSE., 否

  LSALT = .TRUE.                                 ! 控制是否模拟土壤盐分运移
                                                 ! LSALT = .TRUE., 是
                                                 !       = .FALSE., 否

  IRUNMOD = 1                                    ! IRUNMOD = 1, 正常模式, 出错时退出程序
                                                 !         = 2, 安静模式, 出错时退出程序
                                                 !         = 3, 安静模式, 出错时继续运行

  NMAT = 1                                       ! 土壤材料数量

  NCEL = 100                                     ! 土壤单元体数量

  NPER = 60                                      ! 应力期数量

!--------------------------------------------------------------------------------------------------
! 输入文件
!--------------------------------------------------------------------------------------------------
  S_IN_SOL = 'SOIL.IN'                           ! 土壤数据输入文件

  S_IN_PER = 'PERIOD.IN'                         ! 应力期数据输入文件

!--------------------------------------------------------------------------------------------------
! 输出文件
!--------------------------------------------------------------------------------------------------
  S_OUT_LST  = 'LIST.OUT'                        ! 土壤剖面数据输出文件

  S_OUT_PER  = 'PERIOD.OUT'                      ! 应力期数据输出文件

  S_OUT_OBS  = 'OBS.OUT'                         ! 观测点数据输出文件

!--------------------------------------------------------------------------------------------------
! 土壤水分运动设置
!--------------------------------------------------------------------------------------------------
  ISWFINI = 0                                    ! 土壤水流运动初始条件类型
                                                 ! ISWFINI = 0, 初始条件为土壤水势
                                                 !         = 1, 初始条件为土壤含水率

  ISWFBOT = 2                                    ! 土壤水分运动底部边界条件的类型
                                                 ! ISWFBOT = 1, Dirichlet 条件, 需要输入底部边界的水势或含水率
                                                 !         = 2, Neumann 条件, 需要输入底部边界的水量
                                                 !         = 3, Cauchy 条件, 需要输入底部边界的水势和延迟时间
                                                 !         = 4, 自由排水条件, 不需要输入其他数据
                                                 !         = 5, 渗出面条件, 不需要输入其他数据

  ISWFTOP = 1                                    ! 土壤水分运动地表边界条件的类型
                                                 ! ISWFTOP = 1, Dirichlet 条件, 需要输入地表边界的水势或含水率
                                                 !         = 2, Neumann 条件, 需要输入地表边界的水量
                                                 !         = 3, Cauchy 条件, 需要输入地表边界的水势和延迟时间
                                                 !         = 4, 大气条件, 需要输入气象数据

!--------------------------------------------------------------------------------------------------
! 土壤热传导设置
!--------------------------------------------------------------------------------------------------
  ISHTBOT = 3                                     ! 土壤热传导底部边界条件的类型
                                                  ! ISHTBOT = 1, Dirichlet 条件, 需要输入底部边界的地温
                                                  !         = 2, Neumann 条件, 需要输入底部边界的热量
                                                  !         = 3, 零梯度条件, 不需要输入数据

  ISHTTOP = 1                                     ! 土壤热传导地表边界条件的类型
                                                  ! ISHTTOP = 1, Dirichlet 条件, 需要输入地表边界的地温
                                                  !         = 2, Neumann 条件, 需要输入地表边界的热量

!--------------------------------------------------------------------------------------------------
! 土壤盐分运移设置
!--------------------------------------------------------------------------------------------------
  ISSTBOT = 1                                     ! 土壤盐分运移底部边界条件的类型
                                                  ! ISSTBOT = 1, Dirichlet 条件, 需要输入底部边界的盐分浓度
                                                  !         = 2, Neumann 条件, 需要输入底部边界的盐分量
                                                  !         = 3, 零梯度条件, 不需要输入数据

  ISSTTOP = 1                                     ! 土壤盐分运移的地表边界条件的类型
                                                  ! ISSTTOP = 1, Dirichlet 条件, 需要输入地表边界的盐分浓度
                                                  !         = 2, Neumann 条件, 需要输入地表边界的盐分量


!--------------------------------------------------------------------------------------------------
! 方程组迭代求解参数
!--------------------------------------------------------------------------------------------------
  MAXITR = 30                                    ! 最大迭代次数

  HTOL   = 1.0                                   ! 水势容差 (cm)

  OTOL   = 0.0001                                ! 含水率容差 (cm^3 cm^-3)

  CTOL   = 0.0001                                ! 盐分浓度容差 (mg cm^-3)
